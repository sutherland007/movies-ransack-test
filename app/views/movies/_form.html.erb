<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
      <script>
      <% @movie.errors.full_messages.each do |message| %>
        $.Notify({
            caption: 'Error',
            content: '<%= message %>',
            keepOpen: true,
            type: 'warning',
            icon: "<span class='mif-warning'></span>"
        });
      <% end %>
      </script>
  <% end %>

  <script>
$(document).ready(function() {  
  $("#movie_genre_id").select2({
      tags: true,
      multiple: true,
      width: '100%',
      //tokenSeparators: [',', ' '],
      minimumInputLength: 1,
      minimumResultsForSearch: 10,
      ajax: {
          url: 'get_genres',
          dataType: "json",
          type: "GET",
          data: function (params) {

              var queryParameters = {
                  name: params.term /*name is the param that controller gets: in this case is name, but could be other. the controller gets: params[:name]*/
              }
              return queryParameters;
          },
          processResults: function (data) {
              return {
                  results: $.map(data, function (item) {
                      return {
                          text: item.name,
                          id: item.name //to store the tags name
                      }
                  })
              };
          }
      }
  });

  $("#movie_writer_id").select2({
      tags: true,
      multiple: true,
      width: '100%',
      //tokenSeparators: [',', ' '],
      minimumInputLength: 1,
      minimumResultsForSearch: 10,
      ajax: {
          url: 'get_authors',
          dataType: "json",
          type: "GET",
          data: function (params) {

              var queryParameters = {
                  first_name: params.term /*name is the param that controller gets: in this case is name, but could be other. the controller gets: params[:name]*/
              }
              return queryParameters;
          },
          processResults: function (data) {
              return {
                  results: $.map(data, function (item) {
                      return {
                          text: item.first_name,
                          id: item.first_name //to store the tags
                      }
                  })
              };
          }
      }
  });
});
  </script>

  <div class="input-control text full-size" style="margin-top: 20px;" data-role="input">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="input-control textarea full-size" style="margin-top: 20px;" data-role="input">
    <%= f.label :short_desc %>
    <%= f.text_area :short_desc %>
  </div>

  <div class="input-control select full-size" style="margin-top: 20px;" data-role="input">
    <%= f.label :genre_id %>
    <% if @movie.persisted? %>
    <%= f.collection_select :genre_list, Genre.all, :id, :name, {}, {multiple: true, id: "movie_genre_id", value: f.object.genre_list.to_s} %>
    <% else %>
    <%= f.collection_select :genre_list, Genre.all, :id, :name, {}, {multiple: true, id: "movie_genre_id"} %>
    <% end %>
  </div>

  <div class="input-control select full-size" style="margin-top: 20px;" data-role="input">
    <%= f.label :writer_id %>
    <% if @movie.persisted? %>
    <%= f.collection_select :writer_list, Writer.all, :id, :get_full_name, {}, {multiple: true, id: "movie_writer_id", value: f.object.writer_list.to_s} %>
    <% else %>
    <%= f.collection_select :writer_list, Writer.all, :id, :get_full_name, {}, {multiple: true, id: "movie_writer_id"} %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
