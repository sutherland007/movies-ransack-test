<%= render 'nav' %>
<p id="notice"><%= notice %></p>

<div style="float: right;">
  <%= link_to 'New Genre', new_genre_path, class: 'button success' %>
</div>
<h1>Listing Genres</h1>

<table class="table hovered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Short desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.short_desc %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


